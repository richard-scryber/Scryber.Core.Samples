@model Scryber.Core.Samples.Web.Models.DataContentList
@{ 
    Layout = "_document";
}
<p class="strong" style="font-size:20px">This page is sample content from the view controller with title @ViewBag.Name.</p>
<div class="print-2-column">
    <table class="data-table" style="width:100%; padding:20pt">
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr class="@((i % 2) == 0 ? "row even" : "row odd")">
                <td>@Model[i].ID</td>
                <td>@Model[i].Name</td>
                <td class="sum">&#163;@Model[i].Price.ToString("#,##0.00")</td>
            </tr>}
    </table>
</div>